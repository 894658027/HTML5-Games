/*导航层结束*/
.img_res{width:100%; height:auto; display:block;}
/*二层定位*/
#pos_icon{width:1px; height:10px; background:#B31F00; margin:0px auto; position:relative;}
#icon_1{ width:830px; height:370px;position:absolute; top:-891px; left:-480px;}
#icon_2{ width:830px; height:400px;position:absolute; top:-450px; left:-480px;}

.nav_bar{height:10px; margin-top:15px;}
.nav_bar img{ padding-top:10px;}
.nav_sp{ font-size:18px;  padding-left:15px; font-weight:bold; vertical-align:-5px;}
/*日期计时*/
.day{ color:#333333; font-size:24px; vertical-align:-1px;}
.day:hover{ text-decoration:none; color:#000;}
/*文字样式*/
.cap_f{background:#FFF; padding:15px;}

/*内部内边距*/
.xs_pdi{padding:0px 5px;}
.xs_md{margin:3px 0px;}
/*文字层定位*/
.pos_main{width:200px; height:1px; background:red; margin:0px auto; position:relative;}
.pos_con{width:200px; height:40px; background:#000; text-align:center; padding-top:10px;color:#FFF;filter:alpha(opacity=75);opacity:0.75;-moz-opacity:0.75; position:absolute; top:-170px;}

.product{text-decoration:none; color:#000;}


/*底部层*/
.bottom{
	background:url(../images/actdibu.png);
	height:130px;}
.bom{width:500px; height:auto;margin:0px auto; background:#000;}
.bom ul li{list-style:none; float:left; padding-top:30px;padding-left:30px;color:#fff;}
.bom ul li a{color:#FFF;text-decoration:none;}
/*底部层结束*/