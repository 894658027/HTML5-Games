@charset "utf-8";
/* CSS Document */
*{ margin:0; 
   padding:0;
   border:0}
/*导航层*/
body{ background:url(../images/week_bg.png); background-repeat:no-repeat; background-size:100%;height:auto;}
.top{width:100%;height:40px}
.menu {width:80%;height:50px;margin:0px auto;}
.img1{float:left;margin-left:1%;margin-top:10px;}
.img2{float:left;margin-top:10px; margin-left:2%;}
.menu ul li {width:8%;height:47px;list-style:none;float:right;margin:0px 1.5% 0px;margin-top:15px; padding-top:2px;	}
.menu ul li a {display:block;width:100px;height:47px; font-family:'微软雅黑';text-decoration:none;text-align:center;line-height:47px;font-size:16px;color:#300}
.menu ul li a:hover{display:block;background:#90050e;width:100px;height:47px;border-radius:0px;font-family:'微软雅黑';text-decoration:none;text-align:center;line-height:47px;color:#FFF;}
.activity{background:#82070e;}
